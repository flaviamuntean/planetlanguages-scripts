<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to user_signed_in? ? macros_path : root_path, class: "navbar-brand" do %>
    <%= image_tag "logo-col.png", class: "mr-2" %> Planet Languages Scripts
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if controller_name == 'macros' && action_name == "index" %>
          <li class="nav-item active"> <%= link_to "Home", macros_path, class: "nav-link" %></li>
          <li class="nav-item"> <%= link_to "Favourites", user_path(current_user), class: "nav-link" %></li>
          <li class="nav-item"> <%= link_to "Help", help_path, class: "nav-link" %></li>
        <% elsif controller_name == 'users' && action_name == 'show' %>
          <li class="nav-item"> <%= link_to "Home", macros_path, class: "nav-link" %></li>
          <li class="nav-item active"> <%= link_to "Favourites", user_path(current_user), class: "nav-link" %></li>
          <li class="nav-item"> <%= link_to "Help", help_path, class: "nav-link" %></li>
        <% elsif controller_name =='pages' && action_name == 'help' %>
          <li class="nav-item"> <%= link_to "Home", macros_path, class: "nav-link" %></li>
          <li class="nav-item"> <%= link_to "Favourites", user_path(current_user), class: "nav-link" %></li>
          <li class="nav-item active"> <%= link_to "Help", help_path, class: "nav-link" %></li>
        <% else %>
          <li class="nav-item"> <%= link_to "Home", macros_path, class: "nav-link" %></li>
          <li class="nav-item"> <%= link_to "Favourites", user_path(current_user), class: "nav-link" %></li>
          <li class="nav-item"> <%= link_to "Help", help_path, class: "nav-link" %></li>
        <% end %>
        <li class="nav-item">
          <form class="form-inline mx-2 my-2 my-lg-0" action="/macros" accept-charset="UTF-8">
            <input class="form-control mr-sm-2" type="search" placeholder="&#128269; Search" aria-label="Search" name="query">
          </form>
        </li>

        <li class="nav-item active dropdown">
          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
<!--             <p class="dropdown-item">HI, <%#= current_user.email.split("@")[0].upcase %>!</p>
 -->
            <% if current_user.email == "flavia@planetlanguages.com" %>
              <%= link_to "Comments", comments_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to "Account settings", edit_user_registration_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>




