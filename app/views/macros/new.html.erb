<h1 class="header">Add a new macro</h1>

<%= simple_form_for @macro do |f| %>
  <div class="form-inputs">
    <%= f.input :name, input_html: { autocomplete: 'off', autofocus: true } %>
    <%= f.input :description, input_html: { autocomplete: 'off' } %>
    <%= f.input :code %>
    <%= f.input :file_type_list, label: "File Types", as: :check_boxes, collection: Macro.file_types, required: :true %>
    <%= f.input :client_list, label: "Clients", as: :check_boxes, collection: Macro.clients %>
    <%= f.input :tag_list, label: "Tags", as: :check_boxes, collection: Macro.tags, required: :true %>
  </div>

  <div class="form-actions mb-5">
    <%= f.submit class: 'btn btn-sm btn-primary', style: 'background-color: #ff5252; border: #ff5252'%> <span class="button-divider">|</span>
    <%= link_to 'Cancel', macros_path, class: 'btn btn-sm btn-outline-secondary' %>
  </div>
<% end %>
