<h1 class="header">Add a new macro</h1>

<%= simple_form_for @macro do |f| %>
  <div class="form-inputs">
    <%= f.input :name, input_html: { autocomplete: 'off', autofocus: true } %>
    <%= f.input :description, input_html: { autocomplete: 'off' } %>
    <%= f.input :code %>
  </div>

  <div class="form-actions">
    <%= f.submit class: 'btn btn-lg btn-primary' %> <span class="button-divider">|</span>
    <%= link_to 'Cancel', macros_path, class: 'btn btn-lg btn-outline-secondary' %>
  </div>
<% end %>
